<div id="responseBox" style="margin-top: 10px; color: green;"></div>

<script>
  const form = document.getElementById("myForm");
  const responseBox = document.getElementById("responseBox");

  form.addEventListener("submit", async (e) => {
    e.preventDefault(); // 🔴 يمنع الصفحة من إعادة التحميل

    const formData = {
      userName: document.getElementById("name").value,
      email: document.getElementById("email").value,
      message: document.getElementById("message").value
    };

    try {
      const res = await fetch("/api/App/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
      });

      const data = await res.json();
      responseBox.innerText = data.message; // ✅ يبين الرسالة من السيرفر
    } catch (err) {
      responseBox.innerText = "⚠️ خطأ أثناء الإرسال";
      responseBox.style.color = "red";
    }
  });
</script>
